{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": ["node_modules", "build", "public/build"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"correctness": {
				"noUnusedImports": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "info",
					"options": {}
				}
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"files": {
		"ignore": ["package.json", "build"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
